@page "/expenses/{ExpenseId:guid}"

@attribute [StreamRendering]

@* @rendermode InteractiveAuto *@
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<ConfirmDialog @ref="deleteDialog" />

@if (SelectedExpense.IsLoading)
{
    <p>Loading...</p>
}
else if (SelectedExpense.IsSuccess)
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">Expense Details</h1>
        <div class="d-flex align-items-center">
            <button class="btn btn-danger me-2 d-flex align-items-center" @onclick="DeleteExpense">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3 me-1" viewBox="0 0 16 16">
                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
                </svg>
                Delete
            </button>
            <NavLink ActiveClass="active-class" class="btn btn-outline-secondary d-flex align-items-center" href="/expenses">
                <svg xmlns="http://www.w3.org/2000/svg" width="19" height="19" fill="currentColor" class="bi bi-chevron-left me-1" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0"/>
                </svg>
                Go back
            </NavLink>
        </div>
    </div>
    
    <ExpenseDetailForm SelectedExpense="@SelectedExpense.Data" />
}
else
{
    <p>@SelectedExpense.ErrorMessage</p>
}
